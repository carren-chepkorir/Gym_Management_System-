            <input class="form-control border-0" id="myInputredep" onkeyup="myFunction2()" style="background-color:#b2bbc4;color:black;border-radius:30px;font-family:'Century Gothic'" required placeholder="Search" />

        </div>
  
<script>
    function myFunction2() {
        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById("myInputredep");
        filter = input.value.toUpperCase();
        ul = document.getElementById("myULredep");
        li = ul.getElementsByTagName("tr");
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("b")[0];
           
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }

</script>